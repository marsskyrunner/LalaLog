<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/main_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:paddingBottom="@dimen/list_item_margin_top"
            android:paddingTop="@dimen/list_item_margin_top"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/record_date"
                    android:text="00/00/0000"
                    android:layout_alignParentLeft="true"
                    android:alpha="0.5"
                    style="@style/SecondaryText"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/record_time"
                    android:text="00 hrs"
                    android:layout_alignParentRight="true"
                    style="@style/SecondaryText"
                    android:alpha="0.5"
                    android:textAppearance="?attr/textAppearanceListItem" />

            </RelativeLayout>

            <TextView
                android:id="@+id/record_text"
                android:text="Record Text"
                android:layout_marginTop="@dimen/list_item_margin_top"
                android:layout_marginBottom="@dimen/list_item_margin_top"
                style="@style/PrimaryText"
                android:textAppearance="?attr/textAppearanceListItem" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>